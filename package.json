{
  "name": "@halsp/cli",
  "version": "0.4.8",
  "description": "Halsp 的命令行脚手架工具",
  "engines": {
    "node": ">=12.16.0"
  },
  "homepage": "https://github.com/halsp/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/halsp/cli"
  },
  "keywords": [
    "halsp",
    "cli",
    "command"
  ],
  "bugs": {
    "url": "https://github.com/halsp/cli/issues",
    "email": "support@hal.wang"
  },
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "add-js-ext": "sh scripts/add-js-ext.sh",
    "build": "rimraf ./dist/* --glob && ts-node src/main.ts build",
    "build:create-halsp": "ts-node scripts/create-halsp.ts && npm run build",
    "publish:beta": "npm run build && npm publish --tag=beta --access=public",
    "test": "c8 mocha test test/**/*.test.ts",
    "test:local": "c8 cross-env REGISTRY='https://registry.npmmirror.com/' mocha test test/**/*.test.ts",
    "mocha": "c8 mocha test",
    "mocha:local": "c8 cross-env REGISTRY='https://registry.npmmirror.com/' mocha test",
    "ci-test": "sh scripts/ci-test.sh",
    "lint": "eslint src --ext .ts",
    "dev:link": "npm run build && npm uninstall @halsp/cli -g && npm link",
    "prepare": "husky install && npm run add-js-ext"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@halsp/core": "^2.2.2",
    "@halsp/inject": "^2.2.2",
    "chalk": "^5.3.0",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.3.1",
    "figlet": "^1.6.0",
    "glob": "^10.3.10",
    "ignore-walk": "^6.0.3",
    "inquirer": "^9.2.11",
    "lodash": "^4.17.21",
    "npm-check-updates": "^16.14.5",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.5",
    "tree-kill": "^1.2.2",
    "typescript": "^5.3.3",
    "update-notifier": "^6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/chai": "^4.3.7",
    "@types/chai-as-promised": "^7.1.6",
    "@types/cross-spawn": "^6.0.3",
    "@types/figlet": "^1.5.6",
    "@types/glob": "^8.1.0",
    "@types/ignore-walk": "^4.0.1",
    "@types/inquirer": "^9.0.4",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.4",
    "@types/shelljs": "^0.8.13",
    "@types/supertest": "^2.0.14",
    "@types/update-notifier": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "esbuild-plugin-tsc": "^0.4.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "esm": "^3.2.25",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2"
  },
  "bin": {
    "halsp": "bin/cli.js"
  },
  "files": [
    "/.github/*",
    "/.husky/*",
    "/bin/*",
    "/dist/*",
    "/scaffold/*",
    "/scripts/*",
    "/src/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    ".mocharc.json",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}
