{
  "name": "create-sfa",
  "version": "0.0.1",
  "description": "sfajs 快速开始脚手架工具",
  "homepage": "https://github.com/sfajs/create-sfa",
  "repository": {
    "type": "git",
    "url": "https://github.com/sfajs/create-sfa"
  },
  "keywords": [
    "sfa",
    "sfajs"
  ],
  "bugs": {
    "url": "https://github.com/sfajs/create-sfa/issues",
    "email": "support@hal.wang"
  },
  "scripts": {
    "build": "sh scripts/build.sh",
    "publish:beta": "npm run build && npm publish --tag=beta --access=public",
    "test": "npm run build && jest",
    "tests": "sh scripts/tests.sh",
    "lint": "eslint src --ext .ts"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@sfajs/cli": "^0.1.1",
    "commander": "^9.3.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "codecov": "^3.8.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@sfajs/cli": "0.1.x"
  },
  "peerDependenciesMeta": {
    "@sfajs/cli": {
      "optional": true
    }
  },
  "bin": {
    "sfa": "bin/create-sfa.js"
  },
  "files": [
    "/.github/*",
    "/bin/*",
    "/dist/*",
    "/scripts/*",
    "/src/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    "jest.config.js",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
