{
  "name": "@ipare/cli",
  "private": true,
  "license": "MIT",
  "author": "Hal Wang",
  "homepage": "https://ipare.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipare/cli"
  },
  "bugs": {
    "url": "https://github.com/ipare/cli/issues",
    "email": "support@hal.wang"
  },
  "scripts": {
    "build": "lerna run build",
    "pretest":"npm run build",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "preupdate": "npm run bootstrap && npm run test",
    "update": "lerna version --force-publish -m \"chore(release): publish %s\"",
    "publish:only:alpha": "lerna publish --dist-tag=alpha -m \"chore(release): publish %s\" --tagVersionPrefix av",
    "publish:from-package:only:alpha": "lerna publish from-package --dist-tag=alpha -m \"chore(release): publish %s\" --tagVersionPrefix av",
    "publish:alpha": "npm run test && npm run publish:only:alpha",
    "lint": "lerna run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/figlet": "^1.5.5",
    "@types/glob": "^8.0.1",
    "@types/ignore-walk": "^4.0.0",
    "@types/inquirer": "^8.2.5",
    "@types/jest": "^29.2.6",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
