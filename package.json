{
  "name": "@ipare/cli",
  "version": "0.4.0",
  "description": "Ipare 的命令行脚手架工具",
  "engines": {
    "node": ">=12.16.0"
  },
  "homepage": "https://github.com/ipare/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipare/cli"
  },
  "keywords": [
    "ipare"
  ],
  "bugs": {
    "url": "https://github.com/ipare/cli/issues",
    "email": "support@hal.wang"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "sh scripts/build/prod.sh",
    "build:create-ipare": "sh scripts/build/create-ipare.sh",
    "publish:beta": "npm run build && npm publish --tag=beta --access=public",
    "test": "npm run build && jest",
    "tests": "sh scripts/tests.sh",
    "lint": "eslint src --ext .ts",
    "dev": "npm run build && npm uninstall @ipare/cli -g && npm link",
    "prepare": "husky install"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@ipare/core": "^1.7.5",
    "@ipare/http": "^1.7.5",
    "@ipare/inject": "^1.7.5",
    "@ipare/pipe": "^1.7.5",
    "@types/cross-spawn": "^6.0.2",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^9.4.0",
    "cross-spawn": "^7.0.3",
    "figlet": "^1.5.2",
    "ignore-walk": "^5.0.1",
    "inquirer": "^8.2.4",
    "lodash": "^4.17.21",
    "npm-check-updates": "^14.1.1",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.5",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/figlet": "^1.5.4",
    "@types/ignore-walk": "^4.0.0",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.2",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "codecov": "^3.8.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7"
  },
  "peerDependencies": {
    "@ipare/core": "~1",
    "@ipare/inject": "~1",
    "@ipare/pipe": "~1",
    "ts-node": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "@ipare/core": {
      "optional": true
    },
    "@ipare/inject": {
      "optional": true
    },
    "@ipare/pipe": {
      "optional": true
    },
    "ts-node": {
      "optional": true
    }
  },
  "bin": {
    "ipare": "bin/cli.js"
  },
  "files": [
    "/.github/*",
    "/bin/*",
    "/dist/*",
    "/env/*",
    "/scripts/*",
    "/src/*",
    "/template/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "create-ipare.README.md",
    "jest.config.js",
    "LICENSE",
    "minimal.README.md",
    "package.json",
    "README.md",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}
