{
  "name": "@halsp/cli",
  "version": "0.4.2",
  "description": "Halsp 的命令行脚手架工具",
  "engines": {
    "node": ">=12.16.0"
  },
  "homepage": "https://github.com/halsp/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/halsp/cli"
  },
  "keywords": [
    "halsp",
    "cli",
    "command"
  ],
  "bugs": {
    "url": "https://github.com/halsp/cli/issues",
    "email": "support@hal.wang"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist/* --glob && tsc",
    "build:create-halsp": "ts-node scripts/create-halsp.ts && npm run build",
    "publish:beta": "npm run build && npm publish --tag=beta --access=public",
    "test": "npm run build && c8 mocha test test/**/*.test.ts",
    "test:local": "npm run build && c8 cross-env REGISTRY='https://registry.npmmirror.com/' mocha test test/**/*.test.ts",
    "mocha": "c8 mocha test",
    "mocha:local": "c8 cross-env REGISTRY='https://registry.npmmirror.com/' mocha test",
    "ci-test": "sh scripts/ci-test.sh",
    "lint": "eslint src --ext .ts",
    "dev:link": "npm run build && npm uninstall @halsp/cli -g && npm link",
    "prepare": "husky install"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@halsp/core": "^2.1.0",
    "@halsp/inject": "^2.1.0",
    "@halsp/native": "^2.1.0",
    "@halsp/pipe": "^2.1.0",
    "@halsp/static": "^2.1.0",
    "chalk": "^5.2.0",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^10.0.1",
    "cross-spawn": "^7.0.3",
    "figlet": "^1.6.0",
    "get-port": "^7.0.0",
    "glob": "^10.2.6",
    "ignore-walk": "^6.0.3",
    "inquirer": "^9.2.7",
    "lodash": "^4.17.21",
    "npm-check-updates": "^16.10.12",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.5",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "update-notifier": "^6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cross-spawn": "^6.0.2",
    "@types/figlet": "^1.5.6",
    "@types/glob": "^8.1.0",
    "@types/ignore-walk": "^4.0.0",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/shelljs": "^0.8.12",
    "@types/supertest": "^2.0.12",
    "@types/update-notifier": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "c8": "^7.14.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3"
  },
  "bin": {
    "halsp": "bin/cli.js"
  },
  "files": [
    "/.github/*",
    "/.husky/*",
    "/bin/*",
    "/dist/*",
    "/scaffold/*",
    "/scripts/*",
    "/src/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    ".mocharc.json",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}
