{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "./dist",
    "target": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveWatchOutput": true
  }
}