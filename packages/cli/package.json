{
  "name": "@ipare/cli",
  "version": "0.7.5",
  "description": "Ipare 的命令行脚手架工具",
  "engines": {
    "node": ">=12.16.0"
  },
  "homepage": "https://github.com/ipare/cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipare/cli.git"
  },
  "keywords": [
    "ipare"
  ],
  "bugs": {
    "url": "https://github.com/ipare/cli/issues",
    "email": "support@hal.wang"
  },
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "rimraf ./dist/* && tsc",
    "pretest": "npm run build",
    "test": "jest",
    "test:local": "npm run build && cross-env REGISTRY='https://registry.npmmirror.com/' jest",
    "lint": "eslint src --ext .ts",
    "dev": "npm run build && npm uninstall @ipare/cli -g && npm link"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@ipare/core": "^3.2.0",
    "@ipare/inject": "^3.2.0",
    "@ipare/native": "^3.2.0",
    "@ipare/pipe": "^3.2.0",
    "@ipare/static": "^3.2.0",
    "@types/cross-spawn": "^6.0.2",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "cross-spawn": "^7.0.3",
    "figlet": "^1.5.2",
    "glob": "^8.1.0",
    "ignore-walk": "^6.0.0",
    "inquirer": "^8.2.5",
    "lodash": "^4.17.21",
    "npm-check-updates": "^16.6.2",
    "prettier": "^2.8.3",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.5",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/glob": "^8.0.1",
    "@types/ignore-walk": "^4.0.0",
    "@types/inquirer": "^8.2.5",
    "@types/lodash": "^4.14.191",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.12",
    "supertest": "^6.3.3"
  },
  "bin": {
    "ipare": "bin/cli.js"
  },
  "files": [
    "/bin/*",
    "/dist/*",
    "/src/*",
    "/template/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
  ],
  "types": "./dist/index.d.ts",
  "directories": {
    "test": "test"
  }
}
