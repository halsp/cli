{
  "name": "@ipare/cli",
  "version": "0.7.0",
  "description": "Ipare 的命令行脚手架工具",
  "engines": {
    "node": ">=12.16.0"
  },
  "homepage": "https://github.com/ipare/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipare/cli"
  },
  "keywords": [
    "ipare"
  ],
  "bugs": {
    "url": "https://github.com/ipare/cli/issues",
    "email": "support@hal.wang"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist/* && tsc",
    "build:create-ipare": "ts-node scripts/create-ipare.ts && npm run build",
    "publish:beta": "npm run build && npm publish --tag=beta --access=public",
    "test": "npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:local": "npm run build && cross-env REGISTRY='https://registry.npmmirror.com/' cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "ci-test": "sh scripts/ci-test.sh",
    "lint": "eslint src --ext .ts",
    "dev": "npm run build && npm uninstall @ipare/cli -g && npm link",
    "prepare": "husky install"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@ipare/core": "^3.0.2",
    "@ipare/inject": "^3.0.2",
    "@ipare/pipe": "^3.0.2",
    "@types/cross-spawn": "^6.0.2",
    "chalk": "^5.1.2",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "cross-spawn": "^7.0.3",
    "figlet": "^1.5.2",
    "ignore-walk": "^6.0.0",
    "inquirer": "^8.2.5",
    "lodash": "^4.17.21",
    "npm-check-updates": "^16.4.3",
    "prettier": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.5",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.1",
    "typescript": "4.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/figlet": "^1.5.5",
    "@types/ignore-walk": "^4.0.0",
    "@types/inquirer": "^8.2.5",
    "@types/jest": "^29.2.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.10",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3"
  },
  "bin": {
    "ipare": "bin/cli.js"
  },
  "files": [
    "/.github/*",
    "/bin/*",
    "/dist/*",
    "/scripts/*",
    "/src/*",
    "/template/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "create-ipare.README.md",
    "jest.config.js",
    "LICENSE",
    "minimal.README.md",
    "package.json",
    "README.md",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}
